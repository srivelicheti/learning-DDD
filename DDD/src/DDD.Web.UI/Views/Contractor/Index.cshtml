@{
    ViewData["Title"] = "Add Contractor";
}
<h2>@ViewData["Title"].</h2>
<hr/>

@using System.Collections.Specialized
@model AddNewContractorViewModel

<form asp-controller="Contractor" class="form-horizontal" asp-action="Add">

<div class="row">
    <div class="col-md-6 col-xs-12">
        <div class="form-group">
            <label class="col-xs-3 control-label" for="txtContName">Contractor Name</label>
            <div class="col-md-9">
                <input type="text" class="form-control" asp-for="ContractorName" id="txtContName" data-bind="textInput:ContractorName" placeholder="Contractor Name">

            </div>
        </div>
    </div>
    <div class="col-md-6 col-xs-12">
        <div class="form-group">
            <label class="col-xs-3 control-label" for="txtDBA">DBA</label>
            <div class="col-md-9">
                <input type="text" class="form-control" asp-for="DoingBusinessAs" data-bind="textInput:DoingBusinessAs" id="txtDBA" placeholder="DBA">
            </div>
        </div>

    </div>
</div>

<div class="row">
    <div class="col-md-6 col-xs-12">
        <div class="form-group">
            <label class="col-xs-3 control-label" for="txtEinNumber">EIN\SSN Number</label>
            <div class="col-md-9">
                <input type="text" class="form-control" id="txtEinNumber" asp-for="EinNumber" data-bind="value:EinNumber" placeholder="EIN\SSN Number">
                <input type="checkbox" data-bind="checked:AddDuplicateContractorOverride, visible:ContractorExistsWithSameEin" id="chkAddDuplicateContractorOverride" name="AddDuplicateContractorOverride"/>
                <label for="chkAddDuplicateContractorOverride" data-bind="visible:ContractorExistsWithSameEin">Add duplicate contractor</label>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-xs-12">
        <div class="form-group">
            <label class="col-xs-3 control-label" for="ddlContractorType">Contractor Type</label>
            <div class="col-md-9">
                <select id="ddlContractorType" asp-for="Type" data-bind="value:Type" class="form-control">
                    <option value="C">Contracted</option>
                    <option value="S">Self-Arranged</option>
                </select>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-6 col-xs-12">
        <div class="form-group">
            <label class="col-sm-3 control-label" for="txtContractStartDate">Contract Start Date</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" asp-for="ContractStartDate" id="txtContractStartDate" data-bind="textInput:ContractStartDate" placeholder="My label">
            </div>
        </div>
    </div>
    <div class="col-md-6 col-xs-12">
        <div class="form-group">
            <label class="col-sm-3 control-label" for="txtContractEndDate">Contract End Date</label>
            <div class="col-sm-9">
                <input type="text" asp-for="ContractEndDate" class="form-control" id="txtContractEndDate" data-bind="textInput:ContractEndDate" placeholder="Contract End Date">
            </div>
        </div>
    </div>
</div>

<h3>Address</h3>
<hr/>
<div class="row">
    <div class="col-md-6 col-xs-12">
        <div class="form-group">
            <label class="col-xs-3 control-label" for="AddressLine1">Address Line1</label>
            <div class="col-md-9">
                <input type="text" class="form-control" asp-for="AddressLine1" id="AddressLine1" data-bind="textInput:AddressLine1" placeholder="Address Line1">
            </div>
        </div>
    </div>
    <div class="col-md-6 col-xs-12">
        <div class="form-group">
            <label class="col-xs-3 control-label" for="AddressLine2">Address Line2</label>
            <div class="col-md-9">
                <input type="text" class="form-control" asp-for="AddressLine2" id="AddressLine2" data-bind="textInput:AddressLine2" placeholder="Address Line2">
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-6 col-xs-12">
        <div class="form-group">
            <label class="col-xs-3 control-label" for="City">City</label>
            <div class="col-md-9">
                <input type="text" class="form-control" asp-for="City" id="City" data-bind="textInput:City" placeholder="City">
            </div>
        </div>
    </div>
    <div class="col-md-6 col-xs-12">
        <div class="form-group">
            <label class="col-xs-3 control-label" for="State">State</label>
            <div class="col-md-9">
                <input type="text" class="form-control" asp-for="StateCode" id="State" placeholder="State" value="DE" disabled="disabled" aria-disabled="True">
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-6 col-xs-12">
        <div class="form-group">
            <label class="col-xs-3 control-label" for="PhoneNumber">Phone Number</label>
            <div class="col-md-9">
                <input type="text" class="form-control" asp-for="PhoneNumber" id="PhoneNumber" data-bind="textInput:PhoneNumber" placeholder="Phone Number">
            </div>
        </div>
    </div>
    <div class="col-md-6 col-xs-12">
        <div class="form-group">
            <label class="col-xs-3 control-label" for="Email">Email</label>
            <div class="col-md-9">
                <input type="text" asp-for="Email" class="form-control" id="Email" data-bind="textInput:Email" placeholder="Email">
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-6 col-xs-12">
        <div class="form-group">
            <label class="col-sm-3 control-label" for="txtAltPhone">Alternate Phone</label>
            <div class="col-sm-9">
                <input type="text" asp-for="AlternatePhoneNumber" class="form-control" id="txtAltPhone" data-bind="textInput:AlternatePhoneNumber" placeholder="Alternate Phone">
            </div>
        </div>
    </div>
    <div class="col-md-6 col-xs-12">
        <div class="form-group">
            <label class="col-sm-3 control-label" for="txtZipCode">ZipCode</label>
            <div class="col-sm-9">
                <input type="text" asp-for="ZipCode" class="form-control" id="txtZipCode" data-bind="textInput:ZipCode" placeholder="My label">
            </div>
        </div>
    </div>
</div>

<h3>Contact Details</h3>
<hr/>
<div class="row">
    <div class="col-md-6 col-sm-12">
        <div class="form-group">
            <label class="col-sm-3 control-label" for="txtContactFirstName">First Name</label>
            <div class="col-sm-9">
                <input type="text" asp-for="ContactFirstName" class="form-control" id="txtContactFirstName" data-bind="textInput:ContactFirstName" placeholder="My label">
            </div>
        </div>
    </div>
    <div class="col-md-6 col-sm-12">
        <div class="form-group">
            <label class="col-sm-3 control-label" for="txtContactLastName">Last Namel</label>
            <div class="col-sm-9">
                <input type="text" asp-for="ContactLastName" class="form-control" id="txtContactLastName" data-bind="textInput:ContactLastName" placeholder="My label">
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6 col-xs-12">
        <div class="form-group">
            <label class="col-xs-3 control-label" for="txtContactPhoneNumber">Phone Number</label>
            <div class="col-md-9">
                <input type="text" class="form-control" asp-for="ContactPhoneNumber" id="txtContactPhoneNumber" data-bind="textInput:ContactPhoneNumber" placeholder="Phone Number">
            </div>
        </div>
    </div>
    <div class="col-md-6 col-xs-12">
        <div class="form-group">
            <label class="col-xs-3 control-label" for="txtContactEmail">Email</label>
            <div class="col-md-9">
                <input type="text" asp-for="ContactEmail" class="form-control" id="txtContactEmail" data-bind="textInput:ContactEmail" placeholder="Email">
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-6 col-xs-12">
        <div class="form-group">
            <label class="col-sm-3 control-label" for="txtContAltPhone">Alternate Phone</label>
            <div class="col-sm-9">
                <input type="text" asp-for="ContactAlternatePhoneNumber" class="form-control" id="txtContAltPhone" data-bind="textInput:ContactAlternatePhoneNumber" placeholder="Alternate Phone">
            </div>
        </div>
    </div>

</div>

<div class="row">
    <div class="col-md-12">&nbsp;</div>
</div>
<div class="row">
    <div class="col-md-12">&nbsp;</div>
</div>
<div class="row">
    <div class="form-group">
        <div class="col-md-12">
            <input type="button" class="btn btn-primary pull-right" id="btnAddContractor" data-bind="click:AddContractor, enable:IsInValidState" value="Add Contractor"/>
        </div>
    </div>
</div>

